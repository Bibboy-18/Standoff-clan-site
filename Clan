<script>
  // Настройка: при развертывании поменяй этот email на реальный для mailto
  const ADMIN_EMAIL = "yourclan@example.com";

  document.getElementById('copyYear').textContent = new Date().getFullYear();

  // Отправка краткой заявки: делаем mailto и сохраняем в localStorage
  function submitQuick(){
    const nick = document.getElementById('qNick').value.trim();
    const role = document.getElementById('qRole').value;
    const profile = document.getElementById('qProfile').value.trim();
    if(!nick) return false;
    const subj = encodeURIComponent('Заявка в клан (быстрая) — ' + nick);
    const body = encodeURIComponent(`Ник: ${nick}\nРоль: ${role}\nПрофиль: ${profile}`);
    // mailto
    location.href = `mailto:${ADMIN_EMAIL}?subject=${subj}&body=${body}`;
    // save locally
    saveApp({time:Date.now(),nick,role,profile,type:'quick'});
    alert('Заявка открыта в почтовом клиенте. Либо сохранена локально.');
    return false;
  }

  function submitFull(){
    const nick = document.getElementById('fNick').value.trim();
    if(!nick) return false;
    const age = document.getElementById('fAge').value;
    const role = document.getElementById('fRole').value;
    const about = document.getElementById('fAbout').value;
    const profile = document.getElementById('fProfile').value;
    const subj = encodeURIComponent('Заявка в клан — ' + nick);
    const body = encodeURIComponent(`Ник: ${nick}\nВозраст: ${age}\nРоль: ${role}\nО себе: ${about}\nПрофиль: ${profile}`);
    location.href = `mailto:${ADMIN_EMAIL}?subject=${subj}&body=${body}`;
    saveApp({time:Date.now(),nick,age,role,about,profile,type:'full'});
    alert('Полная заявка: открылся почтовый клиент и сохранено локально.');
    return false;
  }

  // Локальное хранилище заявок
  function saveApp(obj){
    const arr = JSON.parse(localStorage.getItem('standoff_apps')||'[]');
    arr.unshift(obj);
    localStorage.setItem('standoff_apps', JSON.stringify(arr));
    updateSlotInfo();
  }

  function saveSample(){
    saveApp({time:Date.now(),nick:'TestPlayer',role:'Rusher',profile:'https://example',type:'quick'});
    alert('Сохранено локально (для демонстрации). Вход: "войти" -> admin.html');
  }

  function updateSlotInfo(){
    const arr = JSON.parse(localStorage.getItem('standoff_apps')||'[]');
    const count = arr.length;
    const max = 50;
    document.getElementById('slotInfo').textContent = `Набор открыт — ${count}/${max} слотов`;
  }
  updateSlotInfo();

  function downloadApps(){
    const arr = JSON.parse(localStorage.getItem('standoff_apps')||'[]');
    const blob = new Blob([JSON.stringify(arr, null, 2)], {type:'application/json'});
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url; a.download = 'standoff_apps.json'; document.body.appendChild(a); a.click();
    a.remove(); URL.revokeObjectURL(url);
  }

  // Настраиваем начальные данные в админке (если пусто)
  if(!localStorage.getItem('standoff_settings')){
    const defaultSettings = {
      heroTitle: "Вступай в наш клан Standoff 2",
      heroText: "Мы — дружная команда. Тренировки, турниры, команды по ролям.",
      aboutText: "Мы собираем игроков разного уровня: от новичков до про.",
      rules: ["Уважать товарищей и админов.","Не использовать читы.","Активность — минимум 2 тренировки в месяц."],
      gallery: [
        "https://via.placeholder.com/600x400?text=Match+1",
        "https://via.placeholder.com/600x400?text=Match+2",
        "https://via.placeholder.com/600x400?text=Training"
      ],
      slotsMax:50,
      nextEvent:"Ближайшая тренировка: чт, 21:00 (по МСК)"
    };
    localStorage.setItem('standoff_settings', JSON.stringify(defaultSettings));
  }

  // Загружаем настройки и применяем содержимое
  function applySettingsToPage(){
    const s = JSON.parse(localStorage.getItem('standoff_settings'));
    if(!s) return;
    document.getElementById('heroTitle').textContent = s.heroTitle;
    document.getElementById('heroText').textContent = s.heroText;
    document.getElementById('aboutText').textContent = s.aboutText;
    document.getElementById('nextEvent').textContent = s.nextEvent || '';
    // rules
    const rl = document.getElementById('rulesList'); rl.innerHTML = '';
    (s.rules||[]).forEach(r=>{ const li=document.createElement('li'); li.textContent=r; rl.appendChild(li);});
    // gallery
    const gg = document.getElementById('galleryGrid'); gg.innerHTML = '';
    (s.gallery||[]).forEach(u=>{
      const img = document.createElement('img'); img.src=u; gg.appendChild(img);
    });
    updateSlotInfo();
  }
  applySettingsToPage();
</script>
