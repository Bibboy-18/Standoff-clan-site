<script>
  // ВАЖНО: это клиентский пароль — для рекламы/пробы хватает.
  // По умолчанию пароль = "supersecret" (хэш ниже). Замени на свой или настрой серверную аутентификацию.
  const pwHash = "b2fdc9c3c4cf7a839fdc84f9f7c4a94c0b1dbb6e0c0c3b0c9a1d8a6f2b6a1f3b"; // SHA-256("supersecret")
  // Если хочешь сменить пароль локально: открой консоль и выполни setCustomHash(hex), затем refresh.

  async function sha256Hex(str){
    const enc = new TextEncoder();
    const data = enc.encode(str);
    const hash = await crypto.subtle.digest('SHA-256', data);
    const h = Array.from(new Uint8Array(hash)).map(b=>b.toString(16).padStart(2,'0')).join('');
    return h;
  }

  async function doLogin(){
    const v = document.getElementById('pw').value;
    const h = await sha256Hex(v);
    if(h === pwHash){
      document.getElementById('loginArea').style.display='none';
      document.getElementById('adminArea').style.display='block';
      loadSettingsToAdmin();
      loadApps();
    } else {
      alert('Неверный пароль');
    }
  }

  function logout(){
    document.getElementById('adminArea').style.display='none';
    document.getElementById('loginArea').style.display='block';
    document.getElementById('pw').value='';
  }

  // Настройки
  function getSettings(){ return JSON.parse(localStorage.getItem('standoff_settings')||'null');}
  function saveSettings(){
    const s = getSettings() || {};
    s.heroTitle = document.getElementById('heroTitle').value;
    s.heroText = document.getElementById('heroText').value;
    s.aboutText = document.getElementById('aboutText').value;
    s.nextEvent = document.getElementById('nextEvent').value;
    localStorage.setItem('standoff_settings', JSON.stringify(s));
    alert('Сохранено. Обнови public страницу, чтобы увидеть изменения.');
  }

  function loadSettingsToAdmin(){
    const s = getSettings();
    if(!s) return;
    document.getElementById('heroTitle').value = s.heroTitle || '';
    document.getElementById('heroText').value = s.heroText || '';
    document.getElementById('aboutText').value = s.aboutText || '';
    document.getElementById('nextEvent').value = s.nextEvent || '';
    renderRules();
    renderGallery();
  }

  // Rules editor
  function renderRules(){
    const s = getSettings() || {};
    const arr = s.rules || [];
    const el = document.getElementById('rulesEditor'); el.innerHTML='';
    arr.forEach((r,i)=>{
      const div = document.createElement('div');
      div.style.display='flex'; div.style.gap='8px'; div.style.marginTop='6px';
      const inp = document.createElement('input'); inp.value = r; inp.style.flex='1';
      const btnDel = document.createElement('button'); btnDel.textContent='Удалить'; btnDel.onclick = ()=>{
        arr.splice(i,1); s.rules = arr; localStorage.setItem('standoff_settings', JSON.stringify(s)); renderRules();
      };
      inp.onchange = ()=>{ arr[i]=inp.value; s.rules = arr; localStorage.setItem('standoff_settings', JSON.stringify(s)); };
      div.appendChild(inp); div.appendChild(btnDel);
      el.appendChild(div);
    });
  }
  function addRule(){
    const v = document.getElementById('newRule').value.trim(); if(!v) return;
    const s = getSettings()||{}; s.rules = s.rules||[]; s.rules.push(v); localStorage.setItem('standoff_settings', JSON.stringify(s));
    document.getElementById('newRule').value=''; renderRules();
  }

  // Gallery editor
  function renderGallery(){
    const s = getSettings() || {}; const arr = s.gallery || [];
    const el = document.getElementById('galleryEditor'); el.innerHTML='';
    arr.forEach((u,i)=>{
      const div = document.createElement('div'); div.style.display='flex'; div.style.gap='8px'; div.style.marginTop='6px';
      const inp = document.createElement('input'); inp.value = u; inp.style.flex='1';
      const btnDel = document.createElement('button'); btnDel.textContent='Удалить'; btnDel.onclick = ()=>{
        arr.splice(i,1); s.gallery = arr; localStorage.setItem('standoff_settings', JSON.stringify(s)); renderGallery();
      };
      inp.onchange = ()=>{ arr[i]=inp.value; s.gallery = arr; localStorage.setItem('standoff_settings', JSON.stringify(s)); };
      div.appendChild(inp); div.appendChild(btnDel);
      el.appendChild(div);
    });
  }
  function addImg(){
    const v = document.getElementById('newImg').value.trim(); if(!v) return;
    const s = getSettings()||{}; s.gallery = s.gallery||[]; s.gallery.push(v); localStorage.setItem('standoff_settings', JSON.stringify(s));
    document.getElementById('newImg').value=''; renderGallery();
  }

  // Заявки
  function loadApps(){
    const arr = JSON.parse(localStorage.getItem('standoff_apps')||'[]');
    const el = document.getElementById('appsList'); el.innerHTML='';
    if(arr.length===0) el.innerHTML = '<div class="muted">Заявок пока нет</div>';
    arr.forEach(a=>{
      const d = document.createElement('div'); d.className='app';
      const date = new Date(a.time||Date.now()).toLocaleString();
      d.innerHTML = `<strong>${a.nick||'—'}</strong> <span class="muted">[${a.type}]</span> — <span class="muted">${date}</span><div class="muted">${a.role||''} ${a.age?('• '+a.age):''}</div><div style="margin-top:6px">${(a.about||'').substring(0,240)}</div><div style="margin-top:6px;color:#9fb0c8">${a.profile||''}</div>`;
      el.appendChild(d);
    });
  }
  function downloadApps(){
    const arr = JSON.parse(localStorage.getItem('standoff_apps')||'[]');
    const blob = new Blob([JSON.stringify(arr, null, 2)], {type:'application/json'});
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url; a.download = 'standoff_apps.json'; document.body.appendChild(a); a.click();
    a.remove(); URL.revokeObjectURL(url);
  }
  function clearApps(){
    if(!confirm('Очистить все локальные заявки?')) return;
    localStorage.removeItem('standoff_apps'); loadApps(); alert('Локальные заявки удалены');
  }

  // Экспорт настроек
  function exportSettings(){
    const s = getSettings()||{};
    const blob = new Blob([JSON.stringify(s, null, 2)], {type:'application/json'});
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a'); a.href=url; a.download='standoff_settings.json'; document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
  }

  // Установить демонстрационные данные (для удобства)
  function setupSample(){
    const sample = {
      heroTitle: "Вступай в наш клан Standoff 2",
      heroText: "Хочешь играть в команде и прокачиваться? Мы ждем тебя!",
      aboutText: "Команда активных игроков, тренеров и турниров.",
      rules: ["Уважать команду","Без читов","Активность 2+ раз/мес"],
      gallery: [
        "https://via.placeholder.com/600x400?text=Demo1",
        "https://via.placeholder.com/600x400?text=Demo2"
      ],
      nextEvent: "Тренировка: вс, 19:00 (МСК)"
    };
    localStorage.setItem('standoff_settings', JSON.stringify(sample));
    localStorage.setItem('standoff_apps', JSON.stringify([
      {time:Date.now(),nick:'DemoPlayer',role:'AWPer',about:'Хочу в клан',profile:'https://example',type:'full'}
    ]));
    alert('Демонстрация установлена. Войдите паролем "supersecret"');
  }

  // Хелпер: смена хэша в консоли (не для обычных пользователей)
  window.setCustomHash = function(hex){
    console.warn('Установлен новый хэш пароля для текущего браузера. Перезагрузите страницу.');
    // не сохраняем в коде; просто переопределяем переменную pwHash
    window.pwHashOverride = hex;
  }
  // если установлен pwHashOverride — используем его
  (function checkOverride(){ if(window.pwHashOverride) pwHash = window.pwHashOverride; })();
</script>
</body>
</html>

